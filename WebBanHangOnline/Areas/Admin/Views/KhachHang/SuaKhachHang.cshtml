@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebBanHangOnline.Models.KhachHang

@{
    ViewData["Title"] = "SuaKhachHang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-list">
            <a asp-area="admin" asp-controller="KhachHang" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="admin" asp-controller="KhachHang" asp-action="ListKhachHang" class="breadcrumb-item"><i></i>Danh sách khách hàng</a>
            <span class="breadcrumb-item active">Sửa thông tin khách hàng</span>
        </nav>
    </div>
</div>

<hr />
<h1>Sửa thông tin khách hàng</h1>

<h4>Thông tin khách hàng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SuaKhachHang">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaKhanhHang" />
            <div class="form-group">
                <label asp-for="TenKhachHang" class="control-label">Tên khách hàng</label>
                <input asp-for="TenKhachHang" class="form-control" />
                <span asp-validation-for="TenKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Tên đăng nhập</label>
                <select asp-for="Username" class ="form-control" asp-items="ViewBag.Username">Chọn tên đăng nhập</select>
            </div>
             <div class="form-group">
                <label asp-for="LoaiKhachHang" class="control-label">Xếp loại khách hàng</label>
                <input asp-for="LoaiKhachHang" class="form-control" />
                <span asp-validation-for="LoaiKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgaySinh" class="control-label">Ngày sinh</label>
                <input asp-for="NgaySinh" class="form-control" />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoDienThoai" class="control-label">Số điện thoại</label>
                <input asp-for="SoDienThoai" class="form-control" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label">Địa chỉ khách hàng</label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label">Ghi chú(nếu có)</label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListKhachHang">Quay về</a>
</div>
<style>
    h1{
        background-color:#FFE4B5
    }
</style>

