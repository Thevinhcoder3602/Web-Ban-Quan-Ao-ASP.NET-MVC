@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebBanHangOnline.Models.DanhMucSp

@{
    ViewData["Title"] = "SuaSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>SuaSanPham</h1>

<h4>DanhMucSp</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="SuaSanPham">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaSp" />
            <div class="form-group">
                <label asp-for="TenSp" class="control-label">Tên sản phẩm</label>
                <input asp-for="TenSp" class="form-control"/>
                <span asp-validation-for="TenSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaChatLieu" class="control-label">Mã chất liệu</label>
                @if (ViewBag.MaChatLieu != null)
                {
                    <select asp-for="MaChatLieu" class="form-control" asp-items="ViewBag.MaChatLieu"></select>
                }
                else
                {
                    <span class="text-danger">Dữ liệu MaChatLieu không tồn tại.</span>
                }
                <span asp-validation-for="MaChatLieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNuocSx" class="control-label">Mã nước sản xuất</label>
                <select asp-for="MaNuocSx" class="form-control" asp-items="ViewBag.MaNuocSx"></select>
                <span asp-validation-for="MaNuocSx" class="text-danger"></span>
            </div>
           @*  <div class="form-group">
                <label asp-for="MaHangSx" class="control-label"></label>
                <select asp-for="MaHangSx" class="form-control" asp-items="ViewBag.MaHangSx"></select>
                <span asp-validation-for="MaHangSx" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="GioiThieuSp" class="control-label">Giới thiệu sản phẩm</label>
                <input asp-for="GioiThieuSp" class="form-control" />
                <span asp-validation-for="GioiThieuSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaLoai" class="control-label">Mã loại</label>
                <select asp-for="MaLoai" class="form-control" asp-items="ViewBag.MaLoai"></select>
                <span asp-validation-for="MaLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnhDaiDien" class="control-label">Giá nhỏ nhất</label>
                <input asp-for="AnhDaiDien" class="form-control" />
                <span asp-validation-for="AnhDaiDien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaNhoNhat" class="control-label">Giá lớn nhất</label>
                <input asp-for="GiaNhoNhat" class="form-control" />
                <span asp-validation-for="GiaNhoNhat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaLonNhat" class="control-label"></label>
                <input asp-for="GiaLonNhat" class="form-control" />
                <span asp-validation-for="GiaLonNhat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DanhMucSanPham">Trở về</a>
</div>

