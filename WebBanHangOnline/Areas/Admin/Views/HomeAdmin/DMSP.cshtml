            <th>
                @Html.DisplayNameFor(model => model.GiaNhoNhat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaLonNhat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaChatLieuNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaHangSxNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaLoaiNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaNuocSx)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiThieuSp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChietKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnhDaiDien)
