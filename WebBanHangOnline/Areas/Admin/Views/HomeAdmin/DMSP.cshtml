@using WebBanHangOnline.Models;
@model IEnumerable<WebBanHangOnline.Models.DanhMucSp>

@{
    ViewData["Title"] = "DMSP";
    Layout = "~/Areas/Admin/Views/Shared/PartialSideBar.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>DMSP</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenSp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaNuocSx)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioiThieuSp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChietKhau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnhDaiDien)
