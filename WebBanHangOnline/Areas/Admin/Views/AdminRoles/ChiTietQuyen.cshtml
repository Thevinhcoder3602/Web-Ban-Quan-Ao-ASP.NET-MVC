@model WebBanHangOnline.Models.PhanQuyen
@{
    ViewData["Title"] = "Thông tin quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-list">
            <a asp-area="admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item"><i></i>Danh mục các quyền</a>
            <span class="breadcrumb-item active">Thông tin quyền truy cập</span>
        </nav>
    </div>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thông Tin Quyền Truy Cập</h4>
            
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> ID Quyền </th>
                        <th> Tên Quyền Truy Cập </th>
                        <th> Ghi Chú </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.IdQuyen</td>
                        <td>@Model.TenQuyen</td>
                        <td>@Model.GhiChu</td>
                    </tr> 
                </tbody>
            </table>
        </div>
    </div>
</div>
<p></p>
<div>
    <a asp-action="Index">Quay về</a>
</div>
