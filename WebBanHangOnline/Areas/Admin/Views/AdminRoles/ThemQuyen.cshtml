@model WebBanHangOnline.Models.PhanQuyen
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-list">
            <a asp-area="admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item"><i></i>Danh mục các quyền</a>
            <span class="breadcrumb-item active">Thêm quyền truy cập</span>
        </nav>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="AdminRoles" asp-action="ThemQuyen">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            

            <div class="form-group">
                <label asp-for="IdQuyen" class="control-label">ID Quyền</label>
                <input asp-for="IdQuyen" class="form-control" />
                <span asp-validation-for="IdQuyen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TenQuyen" class="control-label">Tên Quyền</label>
                <input asp-for="TenQuyen" class="form-control" />
                <span asp-validation-for="TenQuyen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GhiChu" class="control-label">Ghi Chú</label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay về</a>
</div>

