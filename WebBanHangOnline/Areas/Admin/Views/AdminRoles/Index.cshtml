@model IEnumerable<WebBanHangOnline.Models.PhanQuyen>
@using WebBanHangOnline.Models;


@{
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Danh mục các quyền</h1>

<p>
    <a class="btn btn-outline-info btn-fw" asp-action="ThemQuyen">Thêm Mới</a>
</p>
<table class="table">
    <thead>
        <tr class="table-danger">
            <th>
                Tên Quyền
            </th>
            <th>
                Ghi Chú
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string @cls = "table-primary";
        }
@foreach (var item in Model)
        {
            i = i + 1;
            cls = "table-primary";
            if (i % 2 == 0)
            {
                cls = "table-info";
            }
            <tr class="@cls">
            <td>
                @Html.DisplayFor(modelItem => item.TenQuyen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            <td>
                    <a class="btn btn-outline-success btn-icon-text" asp-area="admin" asp-controller="AdminRoles" asp-action="ChiTietQuyen" asp-route-id="@item.IdQuyen">Chi Tiết</a>
                    <a class="btn btn-outline-secondary btn-icon-text" asp-area="admin" asp-controller="AdminRoles" asp-action="SuaQuyen" asp-route-id="@item.IdQuyen">Sửa</a>
                    <a class="btn btn-outline-danger btn-icon-text" asp-area="admin" asp-controller="AdminRoles" asp-action="XoaQuyen" asp-route-id="@item.IdQuyen">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>

