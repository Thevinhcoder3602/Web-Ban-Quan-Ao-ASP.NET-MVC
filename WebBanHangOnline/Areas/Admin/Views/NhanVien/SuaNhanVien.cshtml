@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebBanHangOnline.Models.NhanVien

@{
    ViewData["Title"] = "SuaNhanVien";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-list">
            <a asp-area="admin" asp-controller="NhanVien" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="admin" asp-controller="NhanVien" asp-action="ListNhanVien" class="breadcrumb-item"><i></i>Danh sách nhân viên</a>
            <span class="breadcrumb-item active">Sửa thông tin nhân viên</span>
        </nav>
    </div>
</div>

<hr />
<h1>Sửa thông tin nhân viên</h1>

<h4>Thông tin nhân viên</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SuaNhanVien">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaNhanVien" />
            <div class="form-group">
                <label asp-for="TenNhanVien" class="control-label">Tên nhân viên</label>
                <input asp-for="TenNhanVien" class="form-control" />
                <span asp-validation-for="TenNhanVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Tên đăng nhập</label>
                <select asp-for="Username" class ="form-control" asp-items="ViewBag.Username">Chọn tên đăng nhập</select>
            </div>
             <div class="form-group">
                <label asp-for="ChucVu" class="control-label">Chức vụ</label>
                <input asp-for="ChucVu" class="form-control" />
                <span asp-validation-for="ChucVu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgaySinh" class="control-label">Ngày sinh</label>
                <input asp-for="NgaySinh" class="form-control" />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoDienThoai1" class="control-label">Số điện thoại</label>
                <input asp-for="SoDienThoai1" class="form-control" />
                <span asp-validation-for="SoDienThoai1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoDienThoai2" class="control-label">Số điện thoại 2(nếu có)</label>
                <input asp-for="SoDienThoai2" class="form-control" />
                <span asp-validation-for="SoDienThoai2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label">Địa chỉ nhân viên</label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label">Ghi chú(nếu có)</label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListNhanVien">Quay về</a>
</div>
<style>
    h1{
        background-color:#FFE4B5
    }
</style>

